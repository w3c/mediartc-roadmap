{
  "name": "web-roadmaps",
  "dependencies": {
    "@mdn/browser-compat-data": "^4.2.1",
    "ajv-cli": "^5.0.0",
    "ajv-formats": "^2.1.1",
    "browser-statuses": "^2.1.0",
    "fetch-filecache-for-crawling": "^3.0.2",
    "jsdom": "^19.0.0",
    "mkdirp": "^1.0.4",
    "ncp": "^2.0.0",
    "web-specs": "^2.12.1"
  },
  "scripts": {
    "all": "npm run validate-data && npm run generate-info && npm run validate-all-info && npm run validate-html && npm run generate-pages",
    "generate-info": "npm run generate-specinfo && npm run generate-implinfo",
    "generate-specinfo": "mkdirp .out/data && node tools/extract-spec-data.js .out/data/list.json > .out/data/tr.json",
    "generate-implinfo": "mkdirp .out/data && node tools/extract-impl-data.js .out/data/list.json > .out/data/impl.json",
    "generate-pages": "node tools/generate-roadmaps.js",
    "create-missing-data": "node tools/create-missing-data.js",
    "detect-missing-data": "node tools/create-missing-data.js --detect",
    "list-features": "mkdirp .out/data && node tools/list-features > .out/data/list.json",
    "validate-data": "ajv -s tools/schema-spec.json -c ajv-formats -d data/\\*.json --errors=text",
    "validate-all-info": "npm run validate-specinfo && npm run validate-implinfo && npm run validate-info",
    "validate-info": "node tools/validate-info.js .out/data/list.json .out/data/tr.json",
    "validate-specinfo": "ajv -s tools/schema-tr.json -c ajv-formats -d .out/data/tr.json --errors=text",
    "validate-implinfo": "ajv -s tools/schema-impl.json -c ajv-formats -d .out/data/impl.json --errors=text",
    "validate-html": "node tools/validate-html.js media mobile publishing security web5g"
  }
}
